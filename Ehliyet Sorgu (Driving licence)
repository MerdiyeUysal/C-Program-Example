#include <iostream>

int main(){
    int yas,kalan ;
    printf("Yaşınızı giriniz:");
    scanf("%d" ,&yas);
       if (yas<0){
           printf("Tekrar deneyin");
       }
       else if (0<yas && yas<18){
           kalan=18 - yas ;
           printf("Ehliyet almanız için en az %d kadar yıl geçmeli.\n" , kalan);
       }
       else if (18<=yas && yas<=50){
           printf("Ehliyet alabilirsiniz\n");
       }
       else if (50<yas && yas<130){
           printf("Yaşınız gereği lütfen araba kullanmayınız :) \n");
       }
       else if (yas>130){
           printf("Tekrar deneyin \n");
       }
}
